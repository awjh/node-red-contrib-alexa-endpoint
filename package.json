{
  "name": "node-red-contrib-alexa-endpoints",
  "version": "0.1.0",
  "description": "node red contrib for starting alexa app server",
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "pretest": "npm run lint",
    "prepare": "npm run build",
    "test": "nyc mocha -r ts-node/register 'src/{,!(test)/**}/*.spec.ts'",
    "spreintegration": "./testing/integration/setup.sh",
    "integration": "mocha -r ts-node/register 'src/test/integration/*.spec.ts'",
    "spostintegration": "./testing/integration/unsetup.sh",
    "build": "tsc && cp ./src/*.html dist",
    "watch": "nodemon -L --watch src --verbose -e ts,html --exec './buildAndRun.sh'"
  },
  "node-red": {
    "nodes": {
      "alexa-listener": "dist/alexa-listener.js",
      "alexa-speaker": "dist/alexa-speaker.js",
      "alexa-speaker-listener": "dist/alexa-speaker-listener.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "github.com/awjh/node-red-contrib-alexa-app-server"
  },
  "keywords": [
    "alexa"
  ],
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "coverage/**",
      "dist/**",
      "**/*.spec.ts",
      "src/test"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  },
  "author": "awjh",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/chai": "^4.1.7",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "lodash": "^4.17.11",
    "node-red": "^0.20.6",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^5.2.7",
    "@types/mockery": "^1.4.29",
    "@types/node": "^12.0.12",
    "@types/node-red": "^0.20.0",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.2",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "mockery": "^2.1.0",
    "node-red-node-test-helper": "^0.2.2",
    "nodemon": "^1.18.11",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "ts-mock-imports": "^1.2.6",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.4.4"
  }
}
